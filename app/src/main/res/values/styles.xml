<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="listCount">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">@color/colorCountText</item>
    </style>
    <style name="listDescription">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorDescriptionText</item>
    </style>
    <style name="listCategory">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#e21b0f02</item>
    </style>
</resources>
